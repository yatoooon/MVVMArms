<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/res_white"
        android:orientation="vertical"
        tools:context="com.arms.splash.mvvm.activity.SplashActivity">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lav_splash_lottie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/res_dp_40"
             />

        <com.arms.common.view.SlantedTextView
            android:id="@+id/iv_splash_debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:colorBackground="#b65656"
            android:paddingHorizontal="@dimen/res_dp_15"
            android:paddingVertical="@dimen/res_dp_10"
            android:textColor="@color/res_white"
            android:textSize="@dimen/res_sp_12"
            android:textStyle="bold"
            tools:text="DEBUG" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/iv_splash_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="@dimen/res_dp_50"
            android:layout_marginBottom="@dimen/res_dp_30"
            android:text="@string/app_name"
            android:textColor="@color/res_black60"
            android:textSize="@dimen/res_sp_18"
            android:textStyle="bold" />

    </FrameLayout>
</layout>