<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".mvvm.activity.StatusActivity">

        <com.hjq.bar.TitleBar
        android:id="@+id/res_titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="界面状态案例" />

        <com.common.res.layout.StatusLayout
            android:id="@+id/hl_status_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:name="com.common.template.mvvm.fragment.StatusFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingId"
                tools:layout="@layout/template_fragment_status" />

        </com.common.res.layout.StatusLayout>

    </LinearLayout>
</layout>