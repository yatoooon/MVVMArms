<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.common.template.mvvm.vm.MessageViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.hjq.bar.TitleBar
            android:id="@+id/res_titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftIcon="@null" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/res_dp_30"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_message_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/res_dp_30"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_message_image1"
                    style="@style/res_ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/res_dp_30"
                    android:text="加载普通图片" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_message_image2"
                    style="@style/res_ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/res_dp_30"
                    android:text="加载圆形图片" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_message_image3"
                    style="@style/res_ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/res_dp_30"
                    android:text="加载圆角图片" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_message_toast"
                    style="@style/res_ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/res_dp_30"
                    android:text="弹一个吐司" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_message_permission"
                    style="@style/res_ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/res_dp_30"
                    android:text="申请摄像头权限" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_message_setting"
                    style="@style/res_ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/res_dp_30"
                    android:text="跳转到应用详情页" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_message_black"
                    style="@style/res_ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/res_dp_30"
                    android:text="状态栏黑色字体" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_message_white"
                    style="@style/res_ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/res_dp_30"
                    android:text="状态栏白色字体" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_message_tab"
                    style="@style/res_ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/res_dp_30"
                    android:text="切换到首页 Tab" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>
</layout>