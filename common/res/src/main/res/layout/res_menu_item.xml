<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="String" />

        <variable
            name="position"
            type="int" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_menu_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/res_transparent_selector"
            android:gravity="center"
            android:paddingHorizontal="@dimen/res_dp_15"
            android:paddingVertical="@dimen/res_dp_10"
            android:singleLine="true"
            android:text="@{item}"
            android:textColor="@color/res_common_confirm_text_color"
            android:textSize="@dimen/sp_14"
            tools:text="条目" />

        <View
            android:id="@+id/v_menu_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/res_line_size"
            android:layout_gravity="bottom"
            android:background="@color/res_common_line_color" />

    </FrameLayout>
</layout>