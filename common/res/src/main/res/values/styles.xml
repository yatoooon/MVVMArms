<resources>
    <!-- Base application theme. -->
    <style name="res_AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- 窗口背景颜色 -->
        <item name="android:windowBackground">@color/res_window_background_color</item>
        <!-- 应用的主要色调，ActionBar Toolbar 默认使用该颜色 -->
        <item name="colorPrimary">@color/res_primary_color</item>
        <!-- 应用的主要暗色调，状态栏默认使用该颜色 -->
        <item name="colorPrimaryDark">@color/res_primary_dark_color</item>
        <!-- 应用的强调色，CheckBox RadioButton Switch 等一般控件的选中效果默认采用该颜色 -->
        <item name="colorAccent">@color/res_accent_color</item>
        <!-- 默认文本颜色，Button、TextView 的文字颜色 -->
        <item name="android:textColor">@color/res_text_color</item>
        <!-- 默认字体大小，Button、TextView 的字体大小 -->
        <item name="android:textSize">@dimen/sp_14</item>
        <!-- 默认提示颜色，Button、TextView 的提示文字颜色 -->
        <item name="android:textColorHint">@color/res_text_hint_color</item>
        <!-- ActionMode 覆盖 Actionbar 不被顶下来 -->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- ActionMode 的颜色 -->
        <item name="actionModeBackground">@color/res_primary_color</item>
        <!-- 解决 Android 5.1 及以上版本 Button 英文字符串自动变大写的问题 -->
        <item name="android:textAllCaps">false</item>
        <!-- 解决 ImageView 不能自动等比拉伸图片的问题 -->
        <item name="android:adjustViewBounds">true</item>
        <!-- 默认隐藏输入法，开启这个选项后会导致输入对话框在关闭之后不能关闭软键盘 -->
        <!--<item name="android:windowSoftInputMode">stateHidden</item>-->
        <!-- 关闭 RecyclerView NestedScrollView ViewPager 水波纹效果 -->
        <item name="android:overScrollMode">never</item>
        <!-- 关闭 TextView 自带的文字间距 -->
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- 全屏主题样式 -->
    <style name="res_FullScreenTheme" parent="res_AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- 闪屏页主题样式 -->
    <style name="res_SplashTheme" parent="res_FullScreenTheme">
        <!-- https://www.jianshu.com/p/d0d907754603 -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- 默认按钮样式 -->
    <style name="res_ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingStart">@dimen/res_dp_20</item>
        <item name="android:paddingEnd">@dimen/res_dp_20</item>
        <item name="android:paddingTop">@dimen/res_dp_10</item>
        <item name="android:paddingBottom">@dimen/res_dp_10</item>
        <item name="android:textSize">@dimen/res_sp_14</item>
        <item name="android:textColor">@color/res_white90</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/res_button_circle_selector</item>
        <item name="android:foreground">@null</item>
    </style>

    <!-- 直角按钮样式 -->
    <style name="res_RectButtonStyle" parent="res_ButtonStyle">
        <item name="android:paddingStart">@dimen/res_dp_10</item>
        <item name="android:paddingEnd">@dimen/res_dp_10</item>
        <item name="android:paddingTop">@dimen/res_dp_5</item>
        <item name="android:paddingBottom">@dimen/res_dp_5</item>
        <item name="android:background">@drawable/res_button_rect_selector</item>
    </style>

    <!-- 默认文本框样式 -->
    <style name="res_EditTextStyle">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/res_sp_15</item>
        <item name="android:textColorHint">#A4A4A4</item>
        <item name="android:textColor">#333333</item>
        <item name="android:paddingTop">@dimen/res_dp_10</item>
        <item name="android:paddingBottom">@dimen/res_dp_10</item>
        <item name="android:paddingStart">@dimen/res_dp_10</item>
        <item name="android:paddingEnd">@dimen/res_dp_10</item>
    </style>

    <!-- 默认水平分割线样式 -->
    <style name="res_HorizontalLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/res_line_size</item>
        <item name="android:background">@color/res_common_line_color</item>
    </style>

    <!-- 默认垂直分割线样式 -->
    <style name="res_VerticalLineStyle">
        <item name="android:layout_width">@dimen/res_line_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/res_common_line_color</item>
    </style>

    <!-- 验证码按钮样式 -->
    <style name="res_CountdownViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/res_countdown_selector</item>
        <item name="android:layout_marginStart">@dimen/res_dp_15</item>
        <item name="android:layout_marginEnd">@dimen/res_dp_15</item>
        <item name="android:paddingStart">@dimen/res_dp_10</item>
        <item name="android:paddingEnd">@dimen/res_dp_10</item>
        <item name="android:paddingTop">@dimen/res_dp_10</item>
        <item name="android:paddingBottom">@dimen/res_dp_10</item>
        <item name="android:minWidth">@dimen/res_dp_90</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/res_common_code_send</item>
        <item name="android:textColor">@drawable/res_countdown_color_selector</item>
        <item name="android:textSize">@dimen/res_sp_12</item>
    </style>


    <!-- 对话框默认主题 -->
    <style name="res_BaseDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert"><!-- @android:style/Theme.Dialog -->
        <!-- 无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 浮在 Activity 之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/res_transparent</item>
        <!-- 遮盖层 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 动画效果 -->
        <item name="android:windowEnterAnimation">@anim/res_window_scale_in</item>
        <item name="android:windowExitAnimation">@anim/res_window_scale_out</item>
        <!-- Base.Theme.AppCompat.Light.Dialog.Alert 特有的属性，用于指定默认宽度，这里需要禁用 -->
        <item name="android:windowMinWidthMajor">0dp</item>
        <item name="android:windowMinWidthMinor">0dp</item>
        <!-- 解决 ActionBar 占位导致 Dialog 无法全屏显示的问题 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- ActionMode 覆盖 Actionbar，不顶下来 -->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 不感知敏感的切换 -->
        <!--<item name="android:configChanges">orientation|screenSize|keyboardHidden</item>-->
        <!-- 默认隐藏输入法 -->
        <!--<item name="android:windowSoftInputMode">stateHidden</item>-->
        <!-- Dialog 全屏显示 -->
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>

    <!-- 缩放动画 -->
    <style name="res_ScaleAnimStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/res_window_scale_in</item>
        <item name="android:windowExitAnimation">@anim/res_window_scale_out</item>
    </style>

    <!-- ios 动画 -->
    <style name="res_IOSAnimStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/res_window_ios_in</item>
        <item name="android:windowExitAnimation">@anim/res_window_ios_out</item>
    </style>

    <!-- 顶部弹出动画 -->
    <style name="res_TopAnimStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/res_window_top_in</item>
        <item name="android:windowExitAnimation">@anim/res_window_top_out</item>
    </style>

    <!-- 底部弹出动画 -->
    <style name="res_BottomAnimStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/res_window_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/res_window_bottom_out</item>
    </style>

    <!-- 左边弹出动画 -->
    <style name="res_LeftAnimStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/res_window_left_in</item>
        <item name="android:windowExitAnimation">@anim/res_window_left_out</item>
    </style>

    <!-- 右边弹出动画 -->
    <style name="res_RightAnimStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/res_window_right_in</item>
        <item name="android:windowExitAnimation">@anim/res_window_right_out</item>
    </style>


    <!-- 主页按钮样式 -->
    <style name="res_MainButtonStyle">
        <item name="android:layout_marginTop">@dimen/res_dp_4</item>
        <item name="android:paddingLeft">@dimen/res_dp_8</item>
        <item name="android:paddingRight">@dimen/res_dp_8</item>
        <item name="android:paddingBottom">@dimen/res_dp_4</item>
        <item name="android:paddingTop">@dimen/res_dp_4</item>
        <item name="android:textSize">@dimen/res_sp_10</item>
        <item name="android:textColor">@color/res_text_color</item>
        <item name="android:gravity">center</item>
        <item name="shape_radius">@dimen/res_dp_2</item>
        <item name="shape_strokeColor">@color/res_primary_color</item>
        <item name="shape_solidPressedColor">@color/res_primary_color</item>
        <item name="shape_strokeWidth">@dimen/res_dp_1</item>
    </style>
    <!-- 主页title样式 -->
    <style name="res_MainTitleTextViewStyle">
        <item name="android:paddingLeft">@dimen/res_dp_10</item>
        <item name="android:paddingRight">@dimen/res_dp_10</item>
        <item name="android:paddingBottom">@dimen/res_dp_5</item>
        <item name="android:paddingTop">@dimen/res_dp_5</item>
        <item name="android:textSize">@dimen/res_sp_10</item>
        <item name="android:textColor">@color/res_text_color</item>
    </style>
    <!-- 主页输入框样式 -->
    <style name="res_MainEditTextStyle">
        <item name="android:paddingLeft">@dimen/res_dp_10</item>
        <item name="android:paddingRight">@dimen/res_dp_10</item>
        <item name="android:textSize">@dimen/res_sp_10</item>
        <item name="android:textColor">@color/res_text_color</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:gravity">center</item>
        <item name="shape_strokeColor">@color/res_text_color</item>
        <item name="shape_strokeWidth">@dimen/res_dp_1</item>
    </style>


</resources>